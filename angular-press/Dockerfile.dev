# Development Dockerfile
FROM node:22.12.0-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (using legacy-peer-deps for Angular 19 + NGXS compatibility)
RUN npm install --legacy-peer-deps

# Copy source code
COPY . .

# Expose port
EXPOSE 4200

# Start in development mode with hot reload
CMD ["npm", "start", "--", "--host", "0.0.0.0", "--poll", "2000"]

